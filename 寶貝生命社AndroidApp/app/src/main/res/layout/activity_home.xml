<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bingzhong.baby_life_community.HomeActivity"
    android:background="@color/gray_back">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="銘傳大學寶貝生命社"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/textView" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/smuggle"
                android:id="@+id/image_1"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp" />
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/materialsharing"
                android:id="@+id/image_2"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"/>
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/adoption"
                android:id="@+id/image_3"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="通報走私"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="物資捐贈"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="愛心認養"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp">
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/introtion"
                android:id="@+id/image_4"
                android:scaleType="fitXY"
                android:layout_marginBottom="89dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="0dp"/>
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/medical"
                android:id="@+id/image_5"
                android:scaleType="fitXY"
                android:layout_alignTop="@+id/image_4"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"/>
            <ImageButton
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:background="@drawable/message"
                android:id="@+id/image_6"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="社團簡介"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginLeft="0dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="醫療資訊"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginLeft="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="留言資訊"
                android:textSize="23sp"
                android:gravity="center"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
