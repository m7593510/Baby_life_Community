<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bingzhong.baby_life_community.IntroductionFragment"
    android:orientation="vertical"
    android:background="@color/gray_back">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="社團宗旨"
            android:textColor="@color/black"
            android:textSize="35sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introduction"
            android:id="@+id/introduction_text"
            android:textSize="25sp"/>
    </LinearLayout>

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:id="@+id/ima_facebook"
        android:background="@drawable/facebook"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:id="@+id/ima_animal"
        android:background="@drawable/animal_protection"
        android:layout_below="@+id/ima_facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ima_animal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/ima_fund"
        android:background="@drawable/help_save_fund"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ima_back_introduction" />


</RelativeLayout>
